mixin commentBlock( comment = {})
    .commentBlock
        .commentTitle
            #author #{comment.author.userName} 님의 댓글
            if comment.updatedAt
                #updated #{comment.updatedAt} 수정됨
            else
                #created #{comment.createdAt} 생성됨
        p#text= comment.text
        .activeForm    
            a#reply(href="#") reply
            a#edit(href="#") edit
            a#delete(href="#") delete